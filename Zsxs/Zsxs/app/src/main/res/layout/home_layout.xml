<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/erweima_main_back"
    >
    <LinearLayout
        android:id="@+id/home_search_head"
        android:background="#157a15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/zsxs"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="  中式学社 "
            android:typeface="normal"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="65dp">
        <ImageView
            android:id="@+id/home_search_iv"
            android:layout_gravity="center"
            android:background="@drawable/main_search"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
</LinearLayout>
        <TextView
            android:id="@+id/weekly_login"
            android:layout_marginRight="5dp"
            android:textColor="#fff"
            android:textSize="16sp"
            android:text=" 每日签到"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />


    </LinearLayout>

<ScrollView
    android:id="@+id/scv"
    android:layout_below="@id/home_search_head"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v4.view.ViewPager
        android:id="@+id/home_vp"
        android:layout_width="match_parent"
        android:layout_height="170dp">
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:paddingBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/home_vp_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></LinearLayout>
</RelativeLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerInParent="true"
                android:background="@drawable/home_kzdr"
                android:id="@+id/head_pic_1"
                android:layout_marginBottom="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/head_pic_text_1"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/head_pic_1"
                android:textSize="12dp"
                android:text="考试达人"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginBottom="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/home_qypx"
                android:id="@+id/head_pic_2"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/head_pic_text_2"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/head_pic_2"
                android:textSize="12dp"
                android:text="职场精英"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginBottom="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/home_shyq"
                android:id="@+id/head_pic_3"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/head_pic_text_3"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/head_pic_3"
                android:textSize="12dp"
                android:text="生活易趣"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginBottom="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/home_zccn"
                android:id="@+id/head_pic_4"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/head_pic_text_4"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/head_pic_4"
                android:textSize="12dp"
                android:text="企业培训"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>

 <LinearLayout
     android:layout_marginTop="10dp"
     android:background="#fff"
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
    <RelativeLayout
        android:padding="10dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
       >
            <TextView
                android:id="@+id/weekly_class_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每周百分课"
                android:textColor="#000"
                android:textSize="14sp" />
            <TextView
                android:layout_below="@id/weekly_class_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="每周更新三门热点课程，只需要100积分哦！"
                android:textSize="10sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
    </RelativeLayout>
    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/home_baifenke" />
 </LinearLayout>
    <View

        android:background="@drawable/home_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:paddingTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/weekly_class_content_1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/guodu_icon"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/weekly_class_content_title_1"
            android:textColor="#000"
            android:textSize="14dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/weekly_class_content_1"
            android:text="题目"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/weekly_class_content_2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/guodu_icon"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/weekly_class_content_title_2"
            android:textColor="#000"
            android:textSize="14dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/weekly_class_content_2"
            android:text="题目"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/weekly_class_content_3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/guodu_icon"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/weekly_class_content_title_3"
            android:layout_below="@id/weekly_class_content_3"
            android:textColor="#000"
            android:textSize="14dp"
            android:layout_centerHorizontal="true"
            android:text="题目"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="推荐课程"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingRight="5dp"
            android:id="@+id/home_getmore"
            android:gravity="center"
            android:clickable="true"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:text="更多"
            android:drawableRight="@drawable/goto_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@drawable/home_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <cn.huida.burt.zsxs.view.MyGridView
        android:background="#fff"
        android:listSelector="@android:color/transparent"
        android:id="@+id/home_recommend_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        ></cn.huida.burt.zsxs.view.MyGridView>
</LinearLayout>
</ScrollView>

</RelativeLayout>