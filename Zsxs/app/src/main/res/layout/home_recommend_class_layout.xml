<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#fff"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:padding="10dp"
       android:orientation="vertical"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/home_recommend_pic_1"
           android:padding="10dp"
           android:background="#fff"
           android:layout_width="wrap_content"
           android:layout_height="120dp" />
       <TextView
           android:paddingLeft="10dp"
           android:singleLine="true"
           android:ellipsize="end"
           android:id="@+id/home_recommend_title_1"
           android:textColor="#000"
           android:text="题目"
           android:textSize="16sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:paddingLeft="10dp"
           android:singleLine="true"
           android:ellipsize="end"
           android:id="@+id/home_recommend_title_2"
           android:textSize="12sp"
           android:text="题目"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <LinearLayout
            android:gravity="center_vertical"
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       <TextView
           android:scaleX="0.7"
           android:scaleY="0.7"
           android:id="@+id/home_recommend_class_number"
           android:gravity="center_vertical"
           android:textColor="@color/colorgreen"
           android:text="课时"
           android:drawableLeft="@drawable/keshi_smart"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
           <TextView
               android:scaleX="0.7"
               android:scaleY="0.7"
               android:id="@+id/home_recommend_class_hot"
               android:gravity="center_vertical"
               android:textColor="@color/colorgreen"
               android:text="热度"
               android:drawableLeft="@drawable/dianjiliang_smart"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>
   </LinearLayout>
</LinearLayout>